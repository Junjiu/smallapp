.shoppage{
  margin-top: 50px;
  margin-bottom: 55px;
}
.minepage{
  margin-bottom: 50px;
}
.searchbar{
  position: fixed;
  display:table;
  width: 100%;
  top: 0;
  z-index: 99;
}
.location_icon{
  display: table-cell;
  padding-left: 5px;
  padding-right: 0;
  background-color: #f8f8f9;
}
.userinfo{
  padding: 30px;
  text-align: center;
  vertical-align: middle;
  background-color:#ff6d4a;
}
.useravatar{
  display:inline-block;
  width: 65px;
  height: 65px;
  border-radius: 50%;
  border: 2px solid white;
  overflow: hidden;
}
.username{
  display: block;
}